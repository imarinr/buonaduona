<%= form_with model: @product do |f|%>
    <%= f.label :name, 'Nombre:'%>              <br>
    <%= f.text_field :name %>                   <br>
    <%= f.label :description, 'DescripciÃ³n:'%>  <br>
    <%= f.text_area :description %>            <br>
    <%= f.label :price, 'Precio:'%>             <br>
    <%= f.text_field :price %>                  <br>
    <%= f.label :stock, 'Stock disponible:'%>   <br>
    <%= f.number_field :stock, id: 'stock'%>    <br>
    <%= f.label :available, 'Disponible:'%>     <br>
    <%= f.check_box :available, id: 'available' %><br>
    <%= f.submit "Guardar"%>
<% end %>

<script>
    var stock = document.getElementById('stock');
    var available = document.getElementById('available');

    stock.addEventListener('change', function () {
        available.checked = (parseInt(stock.value) > 0)? true : false;
    });
</script>
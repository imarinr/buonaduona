<h1>Products#index</h1>

<%= link_to 'Agregar nuevo', new_product_path %>
<% @products.each do |p| %>
<p>
    <strong><%= p.name %></strong><br>
    <%= p.description %><br>
    <span>Precio: $<%= p.price %></span><br>
    <span>Stock disponible: <%= p.stock %> unidades</span><br>
    <%= link_to 'Editar', edit_product_path(p.id) %>
    <%= link_to 'Eliminar', product_path(p), data: { turbo_method: :delete }%>
</p>
<% end %>
